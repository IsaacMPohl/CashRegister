import UIKit

class CashRegisterViewController: UIViewController {
    // Outlets for UI components
    @IBOutlet weak var totalLabel: UILabel!
    @IBOutlet weak var inputTextField: UITextField!
    
    var totalAmount: Double = 0.0
    
    override func viewDidLoad() {
        super.viewDidLoad()
        updateTotalLabel()
    }
    
    // Function to update the total label
    func updateTotalLabel() {
        totalLabel.text = String(format: "Total: $%.2f", totalAmount)
    }
    
    // Function to add an item's price to the total
    @IBAction func addItemButtonTapped(_ sender: UIButton) {
        if let inputText = inputTextField.text, let price = Double(inputText) {
            totalAmount += price
            updateTotalLabel()
            inputTextField.text = ""
        }
    }
    
    // Function to complete the transaction and reset the total
    @IBAction func checkoutButtonTapped(_ sender: UIButton) {
        let alert = UIAlertController(title: "Transaction Complete", message: "Total amount: $\(totalAmount)", preferredStyle: .alert)
        let okAction = UIAlertAction(title: "OK", style: .default) { _ in
            self.totalAmount = 0.0
            self.updateTotalLabel()
        }
        alert.addAction(okAction)
        present(alert, animated: true, completion: nil)
    }
}
